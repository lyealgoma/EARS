        "vmArgs": "--module-path \"${workspaceFolder}/MacOS\" --add-modules javafx.controls,javafx.fxml,org.slf4j,com.zaxxer.hikari"
      },
      "vmArgs": "--module-path \"${workspaceFolder}/lib/Windows\" --add-modules javafx.controls,javafx.fxml,org.slf4j,com.zaxxer.hikari"
    },
    {
      "type": "java",
      "name": "Launch Java Program",
